@model CampaignModel
@{
    ViewData["Title"] = "Cadastrar campanha";
}

<div class="text-center">
    <h1 class="">Cadastrar nova campanha</h1>
    <br />
</div>
<form asp-controller="Campaign" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="nm_campaign">Nome da campanha</label>
        <input type="text" asp-for="nm_campaign" class="form-control" placeholder="Digite o nome da campanha.">
    </div>
    <div class="form-group">
        <label for="target">Público alvo</label>
        <input type="text" asp-for="target" class="form-control" placeholder="Digite o público alvo.">
    </div>
    <div class="form-group">
        <label for="details">Detalhes da campanha</label>
        <input type="text" asp-for="details" class="form-control" placeholder="Digite os detalhes.">
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <input type="text" asp-for="status" class="form-control" placeholder="Digite o status.">
    </div>

    <input type="hidden" asp-for="id_company" value="@Model.id_company" />
    <input type="hidden" asp-for="dt_register" />
    <br />
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Company" asp-action="Index" role="button">Voltar</a>
</form>