@model CampaignModel
@{
    ViewData["Title"] = "Editar Campanha";
}

<div class="text-center">
    <h1 class="">Alterar Campanha</h1>
    <br />
</div>
<form asp-controller="Campaign" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="id_campaing" />
    <div class="form-group">
        <label for="nm_campaign">Nome da campanha</label>
        <input type="text" asp-for="nm_campaign" class="form-control" placeholder="Digite o nome da Campanha.">
    </div>
    <div class="form-group">
        <label for="target">Público alvo</label>
        <input type="text" asp-for="target" class="form-control" placeholder="Digite o público alvo.">
    </div>
    <div class="form-group">
        <label for="details">Detalhes</label>
        <input type="text" asp-for="details" class="form-control" placeholder="Digite os detalhes.">
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <input type="text" asp-for="status" class="form-control" placeholder="Digite o status.">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Salvar alterações</button>
    <a class="btn btn-secondary" asp-controller="Campaign" asp-action="Index" role="button">Voltar</a>
</form>
