@model CompanyModel
@{
    ViewData["Title"] = "Confirmação de exclusão";
}

<div class="text-center">
    <h3>Realmente deseja apagar a empresa (@Model.nm_company)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Company" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Company" asp-route-id_company="@Model.id_company" asp-action="Apagar">Confirmar exclusão</a>