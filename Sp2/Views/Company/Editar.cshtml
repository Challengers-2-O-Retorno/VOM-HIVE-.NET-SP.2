@model CompanyModel
@{
    ViewData["Title"] = "Editar Empresa";
}

<div class="text-center">
    <h1 class="">Alterar empresa</h1>
    <br />
</div>
<form asp-controller="Company" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="id_company"/>
    <div class="form-group">
        <label for="nm_company">Nome da empresa</label>
        <input type="text" asp-for="nm_company" class="form-control" placeholder="Digite o nome da empresa.">
    </div>
    <div class="form-group">
        <label for="cnpj">CNPJ</label>
        <input type="text" asp-for="cnpj" class="form-control" placeholder=" XX.XXX.XXX/0001-XX">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="email" class="form-control" placeholder="Digite o email">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Salvar alterações</button>
    <a class="btn btn-secondary" asp-controller="Company" asp-action="Index" role="button">Voltar</a>
</form>