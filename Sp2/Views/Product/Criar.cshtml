@model ProductModel
@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="text-center">
    <h1 class="">Cadastrar nova campanha</h1>
    <h3>Primeiro cadastrar o produto</h3>
    <br />
</div>
<form asp-controller="Product" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nm_product">Nome do produto</label>
        <input type="text" asp-for="nm_product" class="form-control" placeholder="Digite o nome do produto.">
    </div>

    <div class="form-group">
        <label for="category_product">Categoria do produto</label>
        <input type="text" asp-for="category_product" class="form-control" asp-route-id_company="" placeholder="Digite a categoria do produto.">
    </div>
    <input type="hidden" name="id_company" value="@ViewBag.id_company"/>
    <button type="submit" class="btn btn-primary">Cadastrar Produto</button>
</form>