@model ProfileuserModel
@{
    ViewData["Title"] = "Confirmação de exclusão";
}

<div class="text-center">
    <h3>Realmente deseja apagar a campanha (@Model.nm_user)?</h3>
</div>
<form asp-controller="Profileuser" asp-action="Apagar" method="post">
    <input type="hidden" asp-for="id_user" />

    <a class="btn btn-primary btn-block" role="button" asp-controller="Profileuser" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Profileuser" asp-route-id_user="@Model.id_user" asp-action="Apagar">Confirmar exclusão</a>
</form>